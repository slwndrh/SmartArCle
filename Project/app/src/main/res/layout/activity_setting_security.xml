<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".security.SettingSecurity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_vehicle_profile_sec"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_vehicle_profile_sec"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:src="@drawable/vehicle_profile_light"
            android:contentDescription="@string/profile_acc"/>

        <TextView
            android:id="@+id/tv_vehicle_profile_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="30dp"
            android:text="@string/vehicle_profile"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/ppsemibold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_language_sec"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cv_vehicle_profile_sec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_language_sec"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:src="@drawable/language_light"
            android:contentDescription="@string/profile_acc"/>

        <TextView
            android:id="@+id/tv_language_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="30dp"
            android:text="@string/change_language"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/ppsemibold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logout_sec"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cv_language_sec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_logout_sec"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:src="@drawable/logout_light"
            android:contentDescription="@string/profile_acc"/>

        <TextView
            android:id="@+id/tv_logout_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="30dp"
            android:text="@string/logout"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/ppsemibold"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>