<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartArCle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>

        <!-- Warna teks utama -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Warna teks sekunder -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Warna teks untuk judul/toolbar -->
        <item name="android:textColorPrimaryInverse">@color/dark_blue</item>
    </style>
</resources>